end)

PlayerSection:NewSlider("Jump Power", "Changes your jump power", 500, 16, function(jp)
    game.Players.LocalPlayer.Character.Humanoid.WalkSpeed = jp
end)

MagicSection:NewToggle("Gain more magic", "Gives you more magic", function(state)
    if state then
